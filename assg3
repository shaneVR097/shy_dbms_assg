-- Q5: Insert a record in the student table with dept_id 50 (will fail as no matching dept_id exists)
-- This statement demonstrates referential integrity violation:
INSERT INTO STUDENT VALUES (105, 'Rohit', 78.0, 50);

-- Q6: Display name and marks of students whose names contain at least one 'd'
SELECT NAME, MARKS 
FROM STUDENT 
WHERE LOWER(NAME) LIKE '%d%';

-- Q7: Create table cust100 and add constraints
CREATE TABLE CUST100 (
    EMP_ID NUMBER(3) PRIMARY KEY,
    FIRST_NAME VARCHAR2(10) CONSTRAINT CHK_FIRST_NAME CHECK (REGEXP_LIKE(FIRST_NAME, '^[A-Z][a-z]*$')),
    LAST_NAME VARCHAR2(10) NOT NULL CONSTRAINT CHK_LAST_NAME CHECK (REGEXP_LIKE(LAST_NAME, '^[A-Z][a-z]*$')),
    E_MAIL VARCHAR2(20) CONSTRAINT CHK_EMAIL CHECK (REGEXP_LIKE(E_MAIL, '^[A-Z0-9._%+-]+@[A-Z0-9.-]+\\.[A-Z]{2,4}$', 'i')),
    PH_NO VARCHAR2(15) CONSTRAINT CHK_PH_NO CHECK (LENGTH(PH_NO) = 10),
    HIRE_DATE DATE CONSTRAINT CHK_HIRE_DATE CHECK (HIRE_DATE > TO_DATE('01-JAN-1980', 'DD-MON-YYYY')),
    JOB_ID VARCHAR2(10) CONSTRAINT CHK_JOB_ID CHECK (JOB_ID LIKE 'FI%' OR JOB_ID LIKE 'AD%' OR JOB_ID LIKE 'IT%'),
    SALARY NUMBER(8,2) CONSTRAINT CHK_SALARY CHECK (SALARY > 4000 AND SALARY < 25000),
    MGR_ID NUMBER(3),
    DEPT_ID NUMBER(3) CONSTRAINT FK_DEPT_ID REFERENCES DEPT(DEPT_ID)
);

-- Q8: Drop column mgr_id
ALTER TABLE CUST100 DROP COLUMN MGR_ID;

-- Q9: Add mgr_id column and create self-referenced foreign key
ALTER TABLE CUST100 ADD (MGR_ID NUMBER(3));
ALTER TABLE CUST100 ADD CONSTRAINT FK_MGR_ID FOREIGN KEY (MGR_ID) REFERENCES CUST100 (EMP_ID);*/
