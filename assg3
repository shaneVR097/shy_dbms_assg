INSERT INTO DEPT VALUES (100, 'Finance');
INSERT INTO DEPT VALUES (110, 'Admin');

-- Q3: Create table Student with constraints
CREATE TABLE STUDENT (
    STUD_ID NUMBER(3) PRIMARY KEY,
    NAME VARCHAR2(15),
    MARKS NUMBER(5,2),
    DEPT_ID NUMBER(3),
    CONSTRAINT FK_DEPT FOREIGN KEY (DEPT_ID) REFERENCES DEPT (DEPT_ID)
);

-- Q4: Insert 4 student records
INSERT INTO STUDENT VALUES (101, 'Aditya', 89.5, 90);
