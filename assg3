CREATE TABLE DEPT (
    DEPT_ID NUMBER(3) PRIMARY KEY,
    DEPT_NAME VARCHAR2(10)
);

-- Q2: Insert 4 department records
INSERT INTO DEPT VALUES (90, 'HR');
